{% extends 'default/base.html.twig' %}

{% block content %}
<div class="container">

  <div class="row">
    <div class="col">
      <h3>Listado de compras</h3>
    </div>
    <div class="col ">
    </div>

  </div>
  <div class="row">
    <table class="table">
      <thead>
          <tr>
            <th>#</th>
            <th>Usuario</th>
            <th>Descripción</th>
            <th>Proveedor</th>
            <th>Solicitante</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Acción</th>
          </tr>

      </thead>
    <br />
    {% if compras is defined %}
      {% for compra in compras %}
          <tr>
          <td>{{ compra.id }}</td>
          <td>{{ compra.usuario.nombre }}</td>
          <td>{{ compra.descripcion }}</td>
          <td>{{ compra.proveedor.nombre }}</td>
          <td>{{ compra.solicitante }}</td>
          <td>{{ compra.created|date("d-m-Y") }}</td>
          <td>{{ compra.tipo }}</td>
          <td>{{ compra.estado }}</td>
          <td><a class="btn btn-success" href="{{ path('compraView',{'id': compra.id })  }}">Ver</a></td>

    
          </tr>
      {% endfor %}
    {% endif %}
    </table>
  </div>
</div>
{% endblock content %}
